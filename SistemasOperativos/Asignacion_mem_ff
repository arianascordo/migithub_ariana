Accion asignacion_mem_ff (prim: puntero a nodo) es
    //ambiente

    inf_procesos=registro
        tam_proceso: int
        id_proceso: int
        estado = 'asignado', 'no asignado'
    finregistro

    procesos: arreglo [1..3] de inf_procesos

    inf_particiones=registro
        tam_particion: int
        dir_inicio: int
        id_proceso_al: int
        estado = 'ocupado', 'libre'
    finregistro

    particiones: arreglo [1..5] de inf_particiones

    procedimiento inicializar_particiones()
        particiones[1].tam_particion:=150
        particiones[1].dir_inicio:=0
        particiones[1].id_proceso_al:=0
        particiones[1].estado:='ocupado'
        para i:=2 hasta 5 hacer:
            particiones[i].estado:='libre'
        finpara
        particiones[2].tam_particion:=50
        particiones[2].dir_inicio:=150
        particiones[2].id_proceso_al:=0
        particiones[3].tam_particion:=200
        particiones[3].dir_inicio:=200
        particiones[3].id_proceso_al:=0
        particiones[4].tam_particion:=250
        particiones[4].dir_inicio:=400
        particiones[4].id_proceso_al:=0
        particiones[5].tam_particion:=300
        particiones[5].dir_inicio:=650
        particiones[5].id_proceso_al:=0
    finprocedimiento

    procedimiento inicializar_procesos()
       para i=1 hasta 3 hacer
            procesos[i].estado:='no asignado'
        finpara    
    finprocedimiento

    //procedimiento
    inicializar_particiones()
    Para i:=1 hasta 3 hacer:
        leer(procesos[i].tam_proceso)
        Para j:=1 hasta 5 hacer:
            Si (particiones[j].estado='libre') y (particiones[j].tam_particion>=procesos[i].tam_proceso) y (procesos[i].estado='no asginado') entonces
                particiones[j].id_proceso_al:=procesos[i].id_proceso
                particiones[j].estado:='ocupado'
                procesos[i].estado:='asignado'
            finSi 
        finpara
    finpara

    Para i:=1 hasta 2 hacer:
        Para j:=1 hasta 5 hacer:
            si i = 1 entonces
                escribir("Partici칩n", j)
            sino
                escribir("Id_proceso alojado: ", particiones[j].id_proceso_al, "Direcci칩n de inicio: ", particiones[j].dir_inicio, "Tama침o de la partici칩n: ", particiones[j].tam_particion)
            finSi
        finpara             
    finpara
FinAccion 
